<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="beauty_log.profiler_log_listener.class">So\BeautyLogBundle\EventListener\ProfilerLogListener</parameter>
        <parameter key="beauty_log.meter.class">So\BeautyLogBundle\Model\Meter</parameter>
        <parameter key="beauty_log.type">panelAction</parameter>
        <parameter key="beauty_log.panel">logger</parameter>

    </parameters>

    <services>
        <service id="beauty_log.profiler_log_listener" class="%beauty_log.profiler_log_listener.class%" public="true" scope="request">
            <argument type="service" id="request" />
            <argument type="service" id="controller_resolver" />
            <argument>%beauty_log.type%</argument>
            <argument>%beauty_log.panel%</argument>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service id="beauty_log.meter" class="%beauty_log.meter.class%" public="true"></service>
    </services>

</container>
